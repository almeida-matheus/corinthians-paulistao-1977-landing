@keyframes bars
    0%
        transform: scaleY(.6)
        opacity: 1
    50%
        transform: scaleY(.8)
        opacity: 0.5
    75%
        transform: scaleY(1.2)
        opacity: 0.8
    to
        transform: scaleY(.7)
        opacity: 0.4


@keyframes fade-in
    from
        opacity: 0
    to
        opacity: 1
