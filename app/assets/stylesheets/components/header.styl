.audio-bars
    .bar
        display: inline-block
        margin: 1px
        width: 2.2px
        animation: bars 1.1s infinite ease-in-out
        background: $brand-primary

        &:nth-child(1)
            height: 12px
            animation-delay: -0.3s

        &:nth-child(2)
            height: 8px
            animation-delay: -0.4s

        &:nth-child(3)
            height: 10px
            animation-delay: -0.7s

        &:nth-child(4)
            height: 7px
            animation-delay: -0.8s

        &:nth-child(5)
            height: 12px

    &.is-muted
        .bar
            animation: none
            height 8px

.header
    width: 100%
    margin-top: 32px

    .logo
        width: 28px
        height: 40px
        display: block